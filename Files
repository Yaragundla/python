f1 = open('abc','a')       #Appending data to the file...
f1.write(' sleepy')

filename = "mydata"

with open(filename) as file_object:
    lines = file_object.readlines()
mydata = ''
for line in lines:
    mydata += line.rstrip()
print(mydata + "...")
print(len(mydata))
message = 'i like chicken'
message=message.replace('chicken','mutton')
print(message)

