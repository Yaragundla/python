
f = open("mydata",'r')
print(f.read())    #to print the data in the file
print(f.readline())  #to print the only the first line in the data..
print(f.readlines())  #To print all the lines in the list..

filename = "mydata"

with open(filename) as file_object:
    lines = file_object.readlines()

for line in lines:
    print(line.strip())
with open("mydata") as file_object:
    contents = file_object.read()
    print(contents)

f = open("mydata",'w')     #writing on the file..
